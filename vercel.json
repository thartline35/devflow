{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "installCommand": "npm install", "buildCommand": "npm run build", "outputDirectory": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.ts" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
