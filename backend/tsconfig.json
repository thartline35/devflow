{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "../types"]
  },
  "include": [
    "../src",
    "../backend",
    "../routes",
    "../middleware",
    "../types"
  ],
  "exclude": ["node_modules", "../src/**"]
}
